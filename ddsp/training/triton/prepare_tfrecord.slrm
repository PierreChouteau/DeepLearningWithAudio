#!/bin/bash
#SBATCH --time=0-00:10:00
#SBATCH --cpus-per-task=8
#SBATCH --mem=8G
#SBATCH --gres=gpu:1

GETOPTS_RESULT=$(getopt -o '' -l conda_env:,input_audio_filepatterns:,output_tfrecord_path: -n prepare_tfrecord -- "$@")

eval set -- "$GETOPTS_RESULT"

while true; do
    case "$1" in
        --conda_env )
            CONDA_ENV="$2"
            shift 2
            ;;
        --input_audio_filepatterns )
            INPUT_AUDIO_FILEPATTERNS="$2"
            shift 2
            ;;
        --output_tfrecord_path )
            OUTPUT_TFRECORD_PATH="$2"
            shift 2
            ;;
        * )
            break
            ;;
    esac
done

usage() {
    echo "usage: $(basename $0) --conda_env CONDA_ENV --input_audio_filepatterns INPUT_AUDIO_FILEPATTERNS --output_tfrecord_path OUTPUT_TFRECORD_PATH"
}

if [ ! -n "$CONDA_ENV" -o ! -n "$INPUT_AUDIO_FILEPATTERNS" -o ! -n "$OUTPUT_TFRECORD_PATH" ]; then
    usage
    exit 1
fi

module load anaconda2/5.1.0-gpu
module load ffmpeg
source activate "$CONDA_ENV"

srun ddsp_prepare_tfrecord \
    --alsologtostderr \
    --input_audio_filepatterns "$INPUT_AUDIO_FILEPATTERNS" \
    --output_tfrecord_path "$OUTPUT_TFRECORD_PATH" \
    --num_shards 10
